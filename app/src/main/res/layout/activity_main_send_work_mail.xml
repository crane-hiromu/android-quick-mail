<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_send_work_mail"
    style="@style/AppTheme.RelativeLayout.Fill"
    tools:context="com.example.th.onepushmail.activity.main.mail.MainSendWorkMailActivity">

    <LinearLayout
        style="@style/AppTheme.LinearLayout.Vertical.Fill"
        android:gravity="center">

        <TextView
            android:id="@+id/main_send_work_title"
            style="@style/AppTheme.TextView.Large.Black.Bold"
            android:text="@string/activity_main_send_work_title" />

        <Button
            android:id="@+id/main_send_work_button_main"
            style="@style/AppTheme.Button"
            android:layout_marginTop="30dp"
            android:text="@string/activity_main_send_work_button_main" />

        <TextView
            android:id="@+id/main_send_work_message"
            style="@style/AppTheme.TextView"
            android:text="@string/activity_main_send_work_message"
            android:visibility="gone" />

        <LinearLayout
            style="@style/AppTheme.LinearLayout.Horizontal"
            android:gravity="center"
            android:visibility="gone">

            <Button
                android:id="@+id/main_send_work_button_left"
                style="@style/AppTheme.Button"
                android:text="@string/activity_main_send_work_button_left" />

            <Button
                android:id="@+id/main_send_work_button_right"
                style="@style/AppTheme.Button"
                android:text="@string/activity_main_send_work_button_right" />

        </LinearLayout>

        <TextView
            android:id="@+id/main_send_work_finish"
            style="@style/AppTheme.TextView"
            android:text="@string/activity_main_send_work_finish"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>
