<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/activity_main_send_work_mail"
        style="@style/AppTheme.RelativeLayout.Fill"
        tools:context="com.example.th.onepushmail.activity.main.mail.MainSendWorkMailActivity">

        <LinearLayout
            style="@style/AppTheme.LinearLayout.Vertical.Fill"
            android:gravity="center">

            <TextView
                android:id="@+id/main_send_work_title"
                style="@style/AppTheme.TextView.Large.Black.Bold"
                android:text="@string/activity_main_send_work_title" />

            <!--送信ボタン-->
            <Button
                android:id="@+id/main_send_work_button_main"
                style="@style/AppTheme.Button"
                android:layout_marginTop="30dp"
                android:text="@string/activity_main_send_work_button_main" />

        </LinearLayout>

    </RelativeLayout>

</layout>

